    scourge.integer.within_range(scourge.constant.0, member_count, scourge.constant.0)(invalid_index, valid_index)
    scourge.jump.bottom(invalid_index, @scourge.master_scope)()

    [ check member index ]
    scourge.integer.subtract(member_count, scourge.constant.1)(max_member_index)
    scourge.integer.within_range(scourge.constant.0, index, max_member_index)(valid_index, invalid_index)

    [ if valid index ]
    @valid_index valid_index = {
        [ calculate structure ]
        scourge.integer.multiply(index, parsling_byte_size)(member_offset)
        scourge.integer.add(member_offset, parsling_members_current:buffer:start)(parsling.start)
        scourge.buffer.calculate.end_address(parsling.start, parsling_byte_size)(parsling.end)
