[
    Compile
]
[ master type ]
!scourge.json
(
    [ translated data ]
    nodes !scourge.cell [ type TODO ]
)

[ translation data ]
!scourge.json.workspace
(
    [ defines ]
    lexling.types !scourge.json.lexling.types,
    parsling.types !scourge.json.parsling.types,

    [ error data ]
    error !scourge.error,

    [ lexing data ]
    current_character !scourge.current,
    lexlings !scourge.json.lexlings,

    [ parsing data ]
    current_lexling !scourge.current,
    parslings !scourge.json.parslings
)

[ compile ]
scourge.json.compile(text !scourge.buffer, verbose !scourge.cell)(workspace !scourge.json.workspace) = {
    [ setup json ]
    scourge.pack.null()(json !scourge.json)

    [ setup workspace ]
    scourge.pack.null()(workspace !scourge.json.workspace)
    scourge.pack(text, text:start)(workspace:current_character !scourge.current)
    scourge.json.lexling.types.setup()(workspace:lexling.types)
    scourge.json.parsling.types.setup()(workspace:parsling.types)

    [ lex ]
    scourge.json.compile.lex(json, workspace)(json, workspace)
    @verbose.lexlings verbose = {
        scourge.json.compile.lex.print(workspace)()
    }

    [ parse ]
    scourge.json.compile.parse(workspace)(workspace)
    @verbose.parslings verbose = {
        scourge.json.compile.print.parslings(workspace)()
    }
}

[ setup error for json reader ]
scourge.json.compile.raise_error(workspace !scourge.json.workspace, message !scourge.buffer)(workspace !scourge.json.workspace) = {
    [ setup strings ]
    scourge.set("%22;error%22;: {%0A;%09;%22;occured%22;: true,%0A;%09;%22;message%22;: %22;")(header)
    scourge.set("%22;%0A;}%0A;")(footer)

    [ open list ]
    scourge.set(scourge.integer.1024)(increase)
    scourge.copy(scourge.true)(workspace:error:occured)
    scourge.list.open(increase)(workspace:error:json)

    [ create error json ]
    scourge.list.append.buffer_data(workspace:error:json, header)(workspace:error:json) [ append header ]
    scourge.list.append.buffer_data(workspace:error:json, message)(workspace:error:json) [ append message ]
    scourge.list.append.buffer_data(workspace:error:json, footer)(workspace:error:json) [ append footer ]
}

[ close workspace ]
scourge.json.compile.close.workspace(workspace !scourge.json.workspace)() = {
    [ close lexlings ]
    scourge.json.lexlings.close(workspace:lexlings)()

    [ close parslings ]
    scourge.json.parslings.close(workspace, workspace:parslings)()

    [ close error ]
    scourge.error.close(workspace:error)()
}



[
    Lexing
]
[ lexlings type ]
!scourge.json.lexlings
(
    list !scourge.list [ !scourge.json.lexling ]
)

[ open lexlings ]
scourge.json.lexlings.open()(lexlings !scourge.json.lexlings) = {
    [ create dummy lexling ]
    scourge.pack.null()(lexling.dummy !scourge.json.lexling)

    [ calculate current ]
    scourge.set(scourge.integer.1024)(increase)
    scourge.structure.byte_size(lexling.dummy)(lexling.size)
    scourge.integer.multiply(increase, lexling.size)(increase)

    [ open list ]
    scourge.list.open(increase)(lexlings:list)
}

[ close lexlings ]
scourge.json.lexlings.close(lexlings !scourge.json.lexlings)() = {
    [ close list ]
    scourge.list.close(lexlings:list)()
}

[ print lexlings ]
scourge.json.lexlings.print(lexlings !scourge.json.lexlings)() = {
    [ TODO ]
}

[ lexling type ]
!scourge.json.lexling
(
    raw !scourge.buffer,
    type !scourge.cell,
    location !scourge.text.location
)

[ print lexling ]
scourge.json.lexling.print(lexling !scourge.json.lexling)() = {
    [ setup strings ]
    scourge.set("[ ")(header)
    scourge.set(", ")(separator)
    scourge.set(" ]")(footer)

    [ print data ]
    scourge.print.buffer_as_string(header)()
    scourge.print.integer.unsigned(lexling:type)()
    scourge.print.buffer_as_string(separator)()
    scourge.print.buffer_as_string(lexling:raw)()
    scourge.print.buffer_as_string(footer)()
}

[ append lexling ]
scourge.json.append.lexling(list !scourge.list, lexling !scourge.json.lexling)(list !scourge.list) = {
    [ append members ]
    scourge.list.append.buffer(list, lexling:raw)(list)
    scourge.list.append.cell(list, lexling:type)(list)
    scourge.json.append.location(list, lexling:location)(list)
}

[ append lexling location ]
scourge.json.append.location(list !scourge.list, location !scourge.text.location)(list !scourge.list) = {
    scourge.list.append.cell(list, location:file_index)(list)
    scourge.list.append.cell(list, location:line_number)(list)
    scourge.list.append.cell(list, location:character_index)(list)
}

[ lexling type structure ]
!scourge.json.lexling.types
(
    invalid !scourge.cell,
    left_square_bracket !scourge.cell,
    right_square_bracket !scourge.cell,
    left_curly_bracket !scourge.cell,
    right_curly_bracket !scourge.cell,
    string !scourge.cell,
    integer !scourge.cell,
    comma !scourge.cell,
    colon !scourge.cell,
    name !scourge.cell,
    end_of_file !scourge.cell
)

[ setup json lexling type structure ]
scourge.json.lexling.types.setup()(types !scourge.json.lexling.types) = {
    [ set values ]
    scourge.pack.increment(scourge.constant.0, scourge.constant.1)(types !scourge.json.lexling.types)
}

[ lex json ]
scourge.json.compile.lex(json !scourge.json, workspace !scourge.json.workspace)(json !scourge.json, workspace !scourge.json.workspace) = {
    [ setup data ]
    scourge.set(scourge.integer.32)(whitespace.range.end)
    scourge.pack(scourge.constant.0, whitespace.range.end)(whitespace !scourge.buffer)
    scourge.set(scourge.hexadecimal.7B)(left_curly_bracket)
    scourge.set(scourge.hexadecimal.7D)(right_curly_bracket)
    scourge.set(scourge.hexadecimal.5B)(left_square_bracket)
    scourge.set(scourge.hexadecimal.5D)(right_square_bracket)
    scourge.set(scourge.hexadecimal.22)(double_quote)
    scourge.set(scourge.hexadecimal.2C)(comma)
    scourge.set(scourge.hexadecimal.3A)(colon)
    scourge.set(scourge.hexadecimal.30)(decimal_digits.start)
    scourge.set(scourge.hexadecimal.39)(decimal_digits.end)
    scourge.pack.null()(null_location !scourge.text.location)

    [ open lexlings ]
    scourge.json.lexlings.open()(workspace:lexlings)

    [ setup loop start ]
    @lexing.loop.start

    [ check if current is in range ]
    scourge.current.within_range(workspace:current_character)(should_not_quit, should_quit)
    scourge.jump(should_quit, @lexing.loop.exit)()

    [ get character ]
    scourge.address_to_cell(workspace:current_character:progress, scourge.ascii_character.byte_size)(character, advancement)

    [ if whitespace, go back to beginning of loop ]
    scourge.integer.within_range(whitespace:start, character, whitespace:end)(whitespace_detected, no_whitespace_detected)
    @whitespace whitespace_detected = {
        [ next character ]
        scourge.copy(advancement)(workspace:current_character:progress)

        [ jump ]
        scourge.jump(whitespace_detected, @lexing.loop.start)()
    }

    [ otherwise, detect lexling ]
    [ detect left_curly_bracket ]
    scourge.integer.within_range(left_curly_bracket, character, left_curly_bracket)(detected, not_detected)
    @check.left_curly_bracket detected = {
        [ create lexling ]
        scourge.pack(workspace:current_character:progress, workspace:current_character:progress)(text !scourge.buffer)
        scourge.pack(text, workspace:lexling.types:left_curly_bracket, null_location)(lexling !scourge.json.lexling)

        [ next character ]
        scourge.copy(advancement)(workspace:current_character:progress)

        [ append lexling ]
        scourge.json.append.lexling(workspace:lexlings:list, lexling)(workspace:lexlings:list)

        [ jump to loop start ]
        scourge.jump(scourge.always, @lexing.loop.start)()
    }

    [ detect right_curly_bracket ]
    scourge.integer.within_range(right_curly_bracket, character, right_curly_bracket)(detected, not_detected)
    @check.right_curly_bracket detected = {
        [ create lexling ]
        scourge.pack(workspace:current_character:progress, workspace:current_character:progress)(text !scourge.buffer)
        scourge.pack(text, workspace:lexling.types:right_curly_bracket, null_location)(lexling !scourge.json.lexling)

        [ next character ]
        scourge.copy(advancement)(workspace:current_character:progress)

        [ append lexling ]
        scourge.json.append.lexling(workspace:lexlings:list, lexling)(workspace:lexlings:list)

        [ jump to loop start ]
        scourge.jump(scourge.always, @lexing.loop.start)()
    }

    [ detect left_square_bracket ]
    scourge.integer.within_range(left_square_bracket, character, left_square_bracket)(detected, not_detected)
    @check.left_square_bracket detected = {
        [ create lexling ]
        scourge.pack(workspace:current_character:progress, workspace:current_character:progress)(text !scourge.buffer)
        scourge.pack(text, workspace:lexling.types:left_square_bracket, null_location)(lexling !scourge.json.lexling)

        [ next character ]
        scourge.copy(advancement)(workspace:current_character:progress)

        [ append lexling ]
        scourge.json.append.lexling(workspace:lexlings:list, lexling)(workspace:lexlings:list)

        [ jump to loop start ]
        scourge.jump(scourge.always, @lexing.loop.start)()
    }

    [ detect right_square_bracket ]
    scourge.integer.within_range(right_square_bracket, character, right_square_bracket)(detected, not_detected)
    @check.right_square_bracket detected = {
        [ create lexling ]
        scourge.pack(workspace:current_character:progress, workspace:current_character:progress)(text !scourge.buffer)
        scourge.pack(text, workspace:lexling.types:right_square_bracket, null_location)(lexling !scourge.json.lexling)

        [ next character ]
        scourge.copy(advancement)(workspace:current_character:progress)

        [ append lexling ]
        scourge.json.append.lexling(workspace:lexlings:list, lexling)(workspace:lexlings:list)

        [ jump to loop start ]
        scourge.jump(scourge.always, @lexing.loop.start)()
    }
    
    [ detect comma ]
    scourge.integer.within_range(comma, character, comma)(detected, not_detected)
    @check.comma detected = {
        [ create lexling ]
        scourge.pack(workspace:current_character:progress, workspace:current_character:progress)(text !scourge.buffer)
        scourge.pack(text, workspace:lexling.types:comma, null_location)(lexling !scourge.json.lexling)

        [ next character ]
        scourge.copy(advancement)(workspace:current_character:progress)

        [ append lexling ]
        scourge.json.append.lexling(workspace:lexlings:list, lexling)(workspace:lexlings:list)

        [ jump to loop start ]
        scourge.jump(scourge.always, @lexing.loop.start)()
    }
    
    [ detect colon ]
    scourge.integer.within_range(colon, character, colon)(detected, not_detected)
    @check.colon detected = {
        [ create lexling ]
        scourge.pack(workspace:current_character:progress, workspace:current_character:progress)(text !scourge.buffer)
        scourge.pack(text, workspace:lexling.types:colon, null_location)(lexling !scourge.json.lexling)

        [ next character ]
        scourge.copy(advancement)(workspace:current_character:progress)

        [ append lexling ]
        scourge.json.append.lexling(workspace:lexlings:list, lexling)(workspace:lexlings:list)

        [ jump to loop start ]
        scourge.jump(scourge.always, @lexing.loop.start)()
    }

    [ detect string ]
    scourge.integer.within_range(double_quote, character, double_quote)(detected, not_detected)
    @check.double_quote detected = {
        [ setup lexling start ]
        scourge.copy(workspace:current_character:progress)(text.start)

        [ advance progress past starting quote ]
        scourge.copy(advancement)(workspace:current_character:progress)

        [ setup search for double quote loop ]
        @string.loop.start

        [ check for end of characters ]
        scourge.current.within_range(workspace:current_character)(more_characters, ran_out_of_characters)
        @string.ran_out_of_characters ran_out_of_characters = {
            [ setup error ]
            scourge.set("Lexing Error: A string ran out of characters.")(error_message)
            scourge.json.compile.raise_error(workspace, error_message)(workspace)

            [ exit loop ]
            scourge.jump(scourge.always, @lexing.loop.exit)()
        }

        [ check for ending quote ]
        scourge.address_to_cell(workspace:current_character:progress, scourge.ascii_character.byte_size)(character, advancement)
        scourge.integer.within_range(double_quote, character, double_quote)(detected, not_detected)
        @check.string.end_quote detected = {
            [ setup lexling ]
            scourge.copy(workspace:current_character:progress)(text.end)
            scourge.pack(text.start, text.end)(text !scourge.buffer)
            scourge.pack(text, workspace:lexling.types:string, null_location)(lexling !scourge.json.lexling)

            [ next character ]
            scourge.copy(advancement)(workspace:current_character:progress)

            [ append lexling ]
            scourge.json.append.lexling(workspace:lexlings:list, lexling)(workspace:lexlings:list)

            [ jump to loop start ]
            scourge.jump(scourge.always, @lexing.loop.start)()
        }

        [ not detected, go to loop start to check next character ]
        scourge.copy(advancement)(workspace:current_character:progress)
        scourge.jump(scourge.always, @string.loop.start)()
    }

    [ detect integer ]
    scourge.integer.within_range(decimal_digits.start, character, decimal_digits.end)(detected, not_detected)
    @check.decimal_digit detected = {
        [ setup lexling start ]
        scourge.copy(workspace:current_character:progress)(text.start)

        [ advance progress past starting digit ]
        scourge.copy(advancement)(workspace:current_character:progress)

        [ setup search for decimal digits loop ]
        @decimal_digit.loop.start

        [ check for end of characters ]
        scourge.current.within_range(workspace:current_character)(more_characters, ran_out_of_characters)
        @decimal_digit.ran_out_of_characters ran_out_of_characters = {
            [ exit loop ]
            scourge.jump(scourge.always, @lexing.decimal_digit.finished)()
        }

        [ check for next character ]
        scourge.address_to_cell(workspace:current_character:progress, scourge.ascii_character.byte_size)(character, advancement)
        scourge.integer.within_range(decimal_digits.start, character, decimal_digits.end)(detected, not_detected)
        @decimal_digits.next_character detected = {
            [ next character ]
            scourge.copy(advancement)(workspace:current_character:progress)

            [ jump to loop start ]
            scourge.jump(scourge.always, @decimal_digit.loop.start)()
        }

        [ no more characters detected ]
        [ setup offset ]
        @lexing.decimal_digit.finished

        [ setup lexling ]
        scourge.integer.subtract(workspace:current_character:progress, scourge.constant.1)(text.end)
        scourge.pack(text.start, text.end)(text !scourge.buffer)
        scourge.pack(text, workspace:lexling.types:integer, null_location)(lexling !scourge.json.lexling)

        [ append lexling ]
        scourge.json.append.lexling(workspace:lexlings:list, lexling)(workspace:lexlings:list)

        [ jump to start of lexing loop ]
        scourge.jump(scourge.always, @lexing.loop.start)()
    }

    [ detect name ]
    scourge.json.compile.lex.check_for_name_character(character)(detected, not_detected)
    @check.name detected = {
        [ setup lexling start ]
        scourge.copy(workspace:current_character:progress)(text.start)

        [ advance progress past starting character ]
        scourge.copy(advancement)(workspace:current_character:progress)

        [ setup search for characters loop ]
        @name.loop.start

        [ check for end of characters ]
        scourge.current.within_range(workspace:current_character)(more_characters, ran_out_of_characters)
        @name.ran_out_of_characters ran_out_of_characters = {
            [ exit loop ]
            scourge.jump(scourge.always, @lexing.name.finished)()
        }

        [ check for next character ]
        scourge.address_to_cell(workspace:current_character:progress, scourge.ascii_character.byte_size)(character, advancement)
        scourge.json.compile.lex.check_for_name_character(character)(detected, not_detected)
        @name.next_character detected = {
            [ next character ]
            scourge.copy(advancement)(workspace:current_character:progress)

            [ jump to loop start ]
            scourge.jump(scourge.always, @name.loop.start)()
        }

        [ no more characters detected ]
        [ setup offset ]
        @lexing.name.finished

        [ setup lexling ]
        scourge.integer.subtract(workspace:current_character:progress, scourge.constant.1)(text.end)
        scourge.pack(text.start, text.end)(text !scourge.buffer)
        scourge.pack(text, workspace:lexling.types:name, null_location)(lexling !scourge.json.lexling)

        [ append lexling ]
        scourge.json.append.lexling(workspace:lexlings:list, lexling)(workspace:lexlings:list)

        [ jump to start of lexing loop ]
        scourge.jump(scourge.always, @lexing.loop.start)()
    }

    [ if nothing was matched, set error ]
    scourge.set("Lexing Error: No lexling was matched.")(error_message)
    scourge.json.compile.raise_error(workspace, error_message)(workspace)

    [ setup lexing loop end ]
    @lexing.loop.exit

    [ setup end of file lexling ]
    scourge.set("[end_of_file]")(end_of_file_message)
    scourge.pack(end_of_file_message, workspace:lexling.types:end_of_file, null_location)(lexling !scourge.json.lexling)
    scourge.json.append.lexling(workspace:lexlings:list, lexling)(workspace:lexlings:list)
}

[ detect and get name character ]
scourge.json.compile.lex.check_for_name_character(character !scourge.cell)(valid !scourge.cell, invalid !scourge.cell) = {
    [ setup name ranges ]
    scourge.set(scourge.hexadecimal.41)(uppercase_start)
    scourge.set(scourge.hexadecimal.5A)(uppercase_end)
    scourge.set(scourge.hexadecimal.61)(lowercase_start)
    scourge.set(scourge.hexadecimal.7A)(lowercase_end)
    scourge.set(scourge.hexadecimal.30)(numbers_start)
    scourge.set(scourge.hexadecimal.39)(numbers_end)
    scourge.set(scourge.hexadecimal.5F)(underscore)

    [ check ranges ]
    [ check uppercase ]
    scourge.integer.within_range(uppercase_start, character, uppercase_end)(valid, invalid)
    scourge.jump(valid, @exit)()

    [ check lowercase ]
    scourge.integer.within_range(lowercase_start, character, lowercase_end)(valid, invalid)
    scourge.jump(valid, @exit)()

    [ check numbers ]
    scourge.integer.within_range(numbers_start, character, numbers_end)(valid, invalid)
    scourge.jump(valid, @exit)()

    [ check underscore ]
    scourge.integer.within_range(underscore, character, underscore)(valid, invalid)
    scourge.jump(valid, @exit)()

    [ not found ]
    scourge.copy(scourge.false)(valid)
    scourge.copy(scourge.true)(invalid)

    [ exit ]
    @exit
}

[ print lexling list ]
scourge.json.compile.lex.print(workspace !scourge.json.workspace)() = {
    [ setup variables ]
    scourge.pack.null()(lexling.dummy !scourge.json.lexling)
    scourge.structure.byte_size(lexling.dummy)(lexling.size)

    [ setup current ]
    scourge.list.calculate.content_buffer(workspace:lexlings:list)(content)
    scourge.pack(content, content:start)(current !scourge.current)

    [ setup loop start ]
    @loop_start

    [ check for end of current ]
    scourge.current.within_range(current)(should_not_quit, should_quit)
    scourge.jump(should_quit, @loop_exit)()

    [ get lexling ]
    scourge.buffer.calculate.end_address(current:progress, lexling.size)(structure.end)
    scourge.pack(current:progress, structure.end)(lexling_source !scourge.buffer)
    scourge.buffer_to_structure(lexling_source)(lexling !scourge.json.lexling)

    [ next lexling ]
    scourge.integer.add(current:progress, lexling.size)(current:progress)

    [ print lexling ]
    scourge.json.lexling.print(lexling)()
    scourge.print.new_line()()

    [ jump to start of loop ]
    scourge.jump(scourge.always, @loop_start)()

    [ setup loop end ]
    @loop_exit
}



[
    Parsing
]
[ parslings ]
!scourge.json.parslings
(
    root !scourge.json.parsling
)

[ parsling ]
!scourge.json.parsling
(
    type !scourge.cell,
    name !scourge.json.lexling,
    value.datum !scourge.json.lexling,
    value.members !scourge.list [ !scourge.json.parsling ]
)

[ append parsling ]
scourge.json.append.parsling(list !scourge.list, parsling !scourge.json.parsling)(list !scourge.list) = {
    [ append members ]
    scourge.list.append.cell(list, parsling:type)(list)
    scourge.json.append.lexling(list, parsling:name)(list)
    scourge.json.append.lexling(list, parsling:value.datum)(list)
    scourge.list.append.list(list, parsling:value.members)(list)
}

[ close parslings ]
scourge.json.parslings.close(workspace !scourge.json.workspace, parslings !scourge.json.parslings)() = {
    [ close root parsling and recurse ]
    scourge.json.close.parsling(workspace, parslings:root)()
}

[ close parsling ]
scourge.json.close.parsling(workspace !scourge.json.workspace, master_parsling !scourge.json.parsling)() = {
    [ check if parsling is an array or object ]
    scourge.integer.within_range(workspace:parsling.types:object, master_parsling:type, workspace:parsling.types:array)(is_list_type, is_not_list_type)
    @is_list_type is_list_type = {
        [ close by loop ]
        [ setup current ]
        scourge.structure.byte_size(master_parsling)(parsling.byte_size)
        scourge.list.calculate.content_buffer(master_parsling:value.members)(content_buffer)
        scourge.pack(content_buffer, content_buffer:start)(current_member !scourge.current)

        [ setup loop ]
        @is_list_type.loop scourge.always = {
            [ check for end of loop ]
            scourge.current.within_range(current_member)(should_not_quit, should_quit)
            scourge.jump.bottom(should_quit, @is_list_type.loop)()

            [ get sub-parsling ]
            [ calculate structure ]
            scourge.buffer.calculate.end_address(current_member:progress, parsling.byte_size)(parsling.end)
            scourge.pack(current_member:progress, parsling.end)(parsling.buffer !scourge.buffer)

            [ setup structure ]
            scourge.buffer_to_structure(parsling.buffer)(found_parsling !scourge.json.parsling)

            [ close parsling ]
            scourge.json.close.parsling(workspace, found_parsling)()

            [ advance current ]
            scourge.integer.add(current_member:progress, parsling.byte_size)(current_member:progress)

            [ jump to start of loop ]
            scourge.jump.top(scourge.always, @is_list_type.loop)()
        }

        [ close list ]
        scourge.list.close(master_parsling:value.members)()
    }
}

[ parsling types ]
