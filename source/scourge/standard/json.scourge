    [ setup metadata ]
    scourge.structure.byte_size(source_parsling)(parsling.byte_size)

    [ setup buffer ]
    scourge.list.calculate.content_buffer(source_parsling:value.members)(members_buffer)

    [ setup current ]
    scourge.pack(members_buffer, members_buffer:start)(current_member !scourge.current)

    [ setup search condition ]
    scourge.copy(scourge.true)(not_found)

    [ search for member with name ]
    @search not_found = {
        [ check for current within range ]
        scourge.current.within_range(current_member)(more_parslings, no_more_parslings)
        scourge.jump.bottom(no_more_parslings, @search)()

        [ setup parsling read buffer ]
        scourge.pack.null()(dummy !scourge.json.parsling)
        scourge.structure.byte_size(dummy)(parsling.byte_size)
        scourge.buffer.calculate.end_address(current_member:progress, parsling.byte_size)(parsling.end)
        scourge.pack(current_member:progress, parsling.end)(parsling.source !scourge.buffer)

        [ get parsling ]
        scourge.buffer_to_structure(parsling.source)(parsling !scourge.json.parsling)

        [ get name ]
        scourge.json.compile.get_name_from_lexling(parsling:name)(parsling_name)

        [ check name ]
        scourge.check.buffer_contents_are_equal(name, parsling_name)(found_name, did_not_find_name)

        [ if name was matched ]
        @match found_name = {
            [ disable not found ]
            scourge.copy(scourge.false)(not_found)

            [ setup output ]
            scourge.copy(parsling)(found_parsling)

            [ return ]
            scourge.jump.bottom(scourge.always, @search)()
        }

        [ advance current ]
        scourge.integer.add(current_member:progress, parsling.byte_size)(current_member:progress)

        [ next parsling ]
        scourge.jump.top(scourge.always, @search)()
    }
}

[ traverse based on index ]
scourge.json.traverse.retrieve_parsling.by_index(source_parsling !scourge.json.parsling, index !scourge.cell)(found_parsling !scourge.json.parsling, valid_index !scourge.cell, invalid_index !scourge.cell) = {
