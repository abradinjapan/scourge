[ traverse based on name ]
scourge.json.traverse.retrieve_parsling.by_name(source_parsling !scourge.json.parsling, name !scourge.buffer)(found_parsling !scourge.json.parsling, was_found !scourge.cell, was_not_found !scourge.cell) = {
    [ null init output ]
